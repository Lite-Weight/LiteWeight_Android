<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.history.HistoryFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="today" />

        <TextView
            android:id="@+id/todayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="today" />

        <Button
            android:id="@+id/selectButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select day 1" />

        <Button
            android:id="@+id/selectButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select day 2" />

        <Button
            android:id="@+id/selectButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select day 3" />


        <TextView
            android:id="@+id/selectedDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="selected day"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/historyListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>